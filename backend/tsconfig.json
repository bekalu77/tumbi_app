{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
