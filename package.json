{
  "name": "tumbi-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npm run dev",
    "dev": "npx concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy:frontend": "npx vercel deploy --prod",
    "deploy:backend": "cd backend && npx wrangler deploy",
    "deploy": "npm run build && npm run deploy:frontend && npm run deploy:backend"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.4",
    "@capacitor/app": "^5.0.8",
    "@capacitor/core": "^5.7.4",
    "@capacitor/share": "^5.0.8",
    "dotenv": "^17.2.3",
    "fs": "^0.0.1-security",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.344.0",
    "pg": "^8.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.1"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^5.7.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vercel": "^32.3.0",
    "vite": "^5.4.21"
  }
}
