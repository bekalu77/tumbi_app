{
  "name": "tumbi-app",
  "version": "1.0.0",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "cd backend && npx wrangler dev",
    "dev": "npx concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy:frontend": "vercel deploy --prod",
    "deploy:backend": "cd backend && npx wrangler deploy",
    "deploy": "npm run deploy:frontend && npm run deploy:backend"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.4",
    "@capacitor/core": "^5.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.344.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
